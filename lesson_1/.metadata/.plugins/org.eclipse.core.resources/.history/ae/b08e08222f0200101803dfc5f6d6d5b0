#include <stdio.h>
#include <stdint.h>
struct sensor_data {
    int16_t temperature;
    int16_t pressure;
    uint8_t status;
};

struct  __attribute__((packed)) sensor_data_packed {
    int16_t temperature;
    int16_t pressure;
    uint8_t status;
};

int main(void) {
    struct sensor_data sensor1 = {25, 1013, 0x01};
    struct sensor_data_packed sensor2 = {.pressure = 25,
    									 .pressure = 1012,
										 .status = 0x01 };

    printf("sensor1: Temp = %d, Press = %d, Status = 0x%X sizeof %d bytes\n",
           sensor1.temperature,
           sensor1.pressure,
           sensor1.status
		   sizeof(sensor1));

    printf("sensor2: Temp = %d, Press = %d, Status = 0x%X sizeof %d bytes \n",
    		sensor2.temperature,
			sensor2.pressure,
			sensor2.status
		   sizeof(sensor2));    return 0;
}
